{
    "name": "{{ resource_template.resource_name }}",
    "resourceGroupName": "{{ resource_template.parameters.azure_resource_group_name }}",
    "location": "{{ resource_template.parameters.azure_primary_region }}",
    "kind": "{{ resource_template.parameters.azure_storage_kind }}",
    "sku": "{{ resource_template.parameters.azure_sku }}",
    "tags": [
{%- for tag in resource_template.tags -%}
    {%- if forloop.last == false %}
        "{{ tag.key }}={{ tag.value }}",
    {%- else %}
        "{{ tag.key }}={{ tag.value }}"
    {%- endif -%}
{%- endfor %}
    ]
}